{
    "name":         "zstate/crawler",
    "description":  "Crawler",

    "require": {
        "php": ">=7.1",
        "guzzlehttp/guzzle": "^6.0",
        "symfony/console": "^4.0",
        "symfony/config": "^4.0",
        "symfony/dom-crawler": "^4.0",
        "psr/log": "^1.0",
        "symfony/event-dispatcher": "^4.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "php-coveralls/php-coveralls": "^2.0"
    },

    "autoload": {
        "files": ["src/functions.php"],
        "psr-4": {"Zstate\\Crawler\\": "src/"}
    },

    "config": {
        "bin-dir": "bin"
    }
}
